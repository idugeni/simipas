{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@lib/*": ["lib/*"]
      }
    },
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ]
  }