{
  "name": "simipas",
  "version": "0.1.7-alpha",
  "description": "SIMIPAS adalah aplikasi otomatisasi jurnal harian SIMPEG Kemenimipas.",
  "main": "src/app/index.ts",
  "scripts": {
    "start": "ts-node -r dotenv/config -r tsconfig-paths/register dist/app/index.js",
    "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register src/app/index.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.{ts,tsx}' --cache",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "check": "npm run lint && npm run format"
  },
  "keywords": [
    "SIMPEG",
    "automation",
    "jurnal",
    "harian",
    "KEMENIMIPAS"
  ],
  "author": "Eliyanto Sarage",
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/idugeni/simipas.git"
  },
  "bugs": {
    "url": "https://github.com/idugeni/simipas/issues"
  },
  "homepage": "https://github.com/idugeni/simipas",
  "dependencies": {
    "@types/node": "^22.13.11",
    "dotenv": "^16.4.7",
    "playwright": "^1.51.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  }
}
